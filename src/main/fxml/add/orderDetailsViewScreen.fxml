<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<HBox prefHeight="720.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.controller.OrderDetailsViewController" stylesheets="@../../../resources/style.css">
    <TableView fx:id="ordersTable" maxWidth="5000.0" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="id" maxWidth="500.0" minWidth="-1.0" prefWidth="500.0" text="id"/>
            <TableColumn fx:id="firstName" maxWidth="500.0" minWidth="-1.0" prefWidth="500.0" text="imie"/>
            <TableColumn fx:id="lastName" maxWidth="500.0" minWidth="-1.0" prefWidth="500.0" text="nazwisko"/>
            <TableColumn fx:id="orderDate" maxWidth="500.0" minWidth="-1.0" prefWidth="500.0" text="data złożenia"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <TableView fx:id="orderDetailsTable" maxWidth="5000.0" prefWidth="700.0">
        <columns>
            <TableColumn fx:id="beverageName" minWidth="-1.0" prefWidth="500.0" text="nazwa"/>
            <TableColumn fx:id="beverageType" minWidth="-1.0" prefWidth="500.0" text="rodzaj"/>
            <TableColumn fx:id="flavor" minWidth="-1.0" prefWidth="500.0" text="smak"/>
            <TableColumn fx:id="gasType" minWidth="-1.0" prefWidth="500.0" text="rodzaj gazu"/>
            <TableColumn fx:id="packageType" minWidth="-1.0" prefWidth="500.0" text="opakowanie"/>
            <TableColumn fx:id="quantity" minWidth="-1.0" prefWidth="500.0" text="ilość"/>
            <TableColumn fx:id="price" minWidth="-1.0" prefWidth="500.0" text="cena za sztukę"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</HBox>
